<!-- Views/Admin/Flight.cshtml -->
@model WebProje1.Models.Flight

@{
    ViewData["Title"] = "Uçuş Ekle";
}

<h2>@ViewData["Title"]</h2>

<!-- Hata veya Başarı Mesajları -->
@if (!string.IsNullOrEmpty(ViewBag.error))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.error
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.correct))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.correct
    </div>
}

<!-- Form içeriği -->
<form asp-controller="Admin" asp-action="Flight" method="post">
    <!-- Gerekli input alanları -->
    <div class="form-group">
        <label asp-for="AircraftID">Uçak ID:</label>
        <input asp-for="AircraftID" class="form-control" />
        <span asp-validation-for="AircraftID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ItineraryID">Güzergah ID:</label>
        <input asp-for="ItineraryID" class="form-control" />
        <span asp-validation-for="ItineraryID" class="text-danger"></span>
    </div>

    <!-- Diğer input alanları -->

    <button type="submit" class="btn btn-primary">Uçuş Ekle</button>
</form>
