<!-- Views/Admin/Reservation.cshtml -->
@model WebProje1.Models.Reservation

@{
    ViewData["Title"] = "Uçak Rezervasyonu";
}

<h2>@ViewData["Title"]</h2>

<!-- Başarı Mesajı -->
@if (!string.IsNullOrEmpty(ViewBag.correct))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.correct
    </div>
}

<!-- Rezervasyon Formu -->
<form asp-controller="User" asp-action="Reservation" method="post">
    <div class="form-group">
        <label asp-for="FlightID">Uçuş Seç:</label>
        <select asp-for="FlightID" class="form-control" asp-items="@(new SelectList(ViewBag.Flights, "Value", "Text"))"></select>
    </div>

    <!--
    <div class="form-group">
        <label asp-for="PassengerName">Yolcu Adı:</label>
        <input asp-for="PassengerName" class="form-control" />
    </div>
    -->

    <div class="form-group">
        <label asp-for="SeatNumber">Koltuk Numarası:</label>
        <input asp-for="SeatNumber" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Rezervasyon Yap</button>
</form>
